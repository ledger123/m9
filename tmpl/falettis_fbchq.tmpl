<html>
<head>
  <link rel="stylesheet" href="/munshi9/standard.css" type="text/css">
</head>

<body onload="return window.print();">

  <table width="65%" cellspacing="8" cellpadding="2">
    <tr><td width='20%'>&nbsp;</td><td>[% guest_name1 %]</td></tr>
    <tr><td>&nbsp;</td><td>[% hdr.room_num %]</td></tr>
    <tr><td>&nbsp;</td><td>[% hdr.sale_date %]</td></tr>
  </table>

  <table width="65%" cellspacing="5" cellpadding="0">
    <tr><td colspan=4>&nbsp;</td></tr>
    <tr><td colspan=4>&nbsp;</td></tr>
    <tr><td colspan=4>&nbsp;</td></tr>
    <tr><td colspan=4>&nbsp;</td></tr>
    <tr><td colspan=4>&nbsp;</td></tr>

    <tr>
      <th align='left'>tem Name</th>
      <th>Qty</th>
      <th>Price</th>
      <th>Amount</th>
    </tr>

[% FOREACH id IN dtl.keys.sort %]
    <tr>
      <td>[% dtl.$id.item_name %]</td>
      <td align="right">[% dtl.$id.qty %]</td>
      <td align="right">[% nf.format_price(dtl.$id.price) %]</td>
      <td align="right">[% nf.format_price(dtl.$id.amount) %]</td>
    </tr>
[% END %]

  </table>

  <table width="65%">

[% IF hdr.sc > 0 %]
    <tr>
      <td width="60%"></td>
      <td>Srv Chgs</td>
      <td align="right">[% nf.format_price(hdr.sc_amt) %]</td>
    </tr>
[% END %]

[% IF hdr.fdisc_amt > 0 %]
    <tr>
      <td width="50%"></td>
      <td>Food Disc</td>
      <td align="right">[% nf.format_price(hdr.fdisc_amt) %]</td>
    </tr>
[% END %]

[% IF hdr.bdisc_amt > 0 %]
    <tr>
      <td width="50%"></td>
      <td>Bev.Disc</td>
      <td align="right">[% nf.format_price(hdr.bdisc_amt) %]</td>
    </tr>
[% END %]

    <tr>
      <td width="50%"></td>
      <td><b>Sub Total</b></td>
      <td align="right">[% nf.format_price(hdr.sale_amt) %]</td>
    </tr>

[% IF hdr.tip > 0 %]
    <tr>
      <td width="50%"></td>
      <td>Tip</td>
      <td align="right">[% nf.format_price(hdr.tip) %]</td>
    </tr>
[% END %]


[% IF hdr.ced > 0 %]
    <tr>
      <td width="50%"></td>
      <td>16% Tax</td>
      <td align="right">[% nf.format_price(hdr.ced) %]</td>
    </tr>
[% END %]


[% IF hdr.tax10 > 0 %]
    <tr>
      <td width="50%"></td>
      <td>10% Adv.Tax</td>
      <td align="right">[% nf.format_price(hdr.tax10) %]</td>
    </tr>
[% END %]

    <tr>
      <td width="50%"></td>
      <td><b>Total</b></td>
      <td align="right">[% nf.format_price(hdr.net_amt) %]</td>
    </tr>

  </table><br>

  <table width="65%" cellspacing="0" cellpadding="0" border="0">
    <tr>
      <td align="right">[% user %]</td>
    </tr>
  </table>
</body>
</html>
